{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Used to kickstart future development.",
  "main": "start.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidshur/mern-boilerplate.git"
  },
  "author": "David Shur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidshur/mern-boilerplate/issues"
  },
  "homepage": "https://github.com/davidshur/mern-boilerplate#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "mongoose": "^5.9.22"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": "12.14.1"
  }
}
